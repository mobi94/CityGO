<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/profile_list_item">

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/profile_list_category"
        android:background="@drawable/background_avatar"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="3dp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_alignTop="@+id/profile_list_category"
        android:layout_alignBottom="@+id/profile_list_category"
        android:layout_toRightOf="@+id/profile_list_category"
        android:layout_marginLeft="15dp"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="title"
            android:id="@+id/profile_list_title"
            android:textColor="#FFF" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="available seats"
            android:id="@+id/profile_list_available_seats"
            android:textColor="#FFF" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_alignTop="@+id/profile_list_category"
        android:layout_alignBottom="@+id/profile_list_category"
        android:layout_alignParentRight="true"
        android:gravity="center"
        android:layout_marginRight="15dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="date"
            android:id="@+id/profile_list_date"
            android:textColor="#FFF" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="time"
            android:id="@+id/profile_list_time"
            android:textColor="#FFF" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_horizontal"
        android:layout_below="@+id/profile_list_category"
        android:layout_marginTop="3dp"
        android:layout_centerHorizontal="true">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Edit event"
            android:id="@+id/expandable_edit_event"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="#FFF"
            android:background="@drawable/background_normal_name"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="15dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Show followers"
            android:id="@+id/expandable_show_followers"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="#FFF"
            android:background="@drawable/background_normal_name"
            android:autoText="false"
            android:layout_marginRight="25dp"
            android:layout_marginLeft="15dp" />

    </LinearLayout>

</RelativeLayout>