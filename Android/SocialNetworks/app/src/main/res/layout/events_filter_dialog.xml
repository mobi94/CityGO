<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    xmlns:materialdesign="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Event category"
        android:id="@+id/filter_category"
        android:layout_gravity="center_horizontal" />

    <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/filter_category_switchers"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="Love"
                        android:layout_weight="1"
                        android:gravity="center" />
                    <com.gc.materialdesign.views.Switch
                        android:id="@+id/switch_love"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@color/niagara"
                        materialdesign:check="true" />
                </LinearLayout>
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="Movie"
                        android:layout_weight="1"
                        android:gravity="center" />
                    <com.gc.materialdesign.views.Switch
                        android:id="@+id/switch_movie"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@color/niagara"
                        materialdesign:check="true" />
                </LinearLayout>
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="Sport"
                        android:layout_weight="1"
                        android:gravity="center" />
                    <com.gc.materialdesign.views.Switch
                        android:id="@+id/switch_sport"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@color/niagara"
                        materialdesign:check="true" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="Business"
                        android:layout_weight="1"
                        android:gravity="center" />
                    <com.gc.materialdesign.views.Switch
                        android:id="@+id/switch_business"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@color/niagara"
                        materialdesign:check="true" />
                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="Coffee"
                        android:layout_weight="1"
                        android:gravity="center" />
                    <com.gc.materialdesign.views.Switch
                        android:id="@+id/switch_coffee"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@color/niagara"
                        materialdesign:check="true" />
                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="Meet"
                        android:layout_weight="1"
                        android:gravity="center" />
                    <com.gc.materialdesign.views.Switch
                        android:id="@+id/switch_meet"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@color/niagara"
                        materialdesign:check="true" />
                </LinearLayout>

            </LinearLayout>

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sex"
        android:id="@+id/filter_gender"
        android:layout_gravity="center_horizontal" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Male"
            android:layout_weight="1"
            android:gravity="center" />
        <com.gc.materialdesign.views.Switch
            android:id="@+id/switch_male"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/niagara"
            materialdesign:check="true" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Female"
            android:layout_weight="1"
            android:gravity="center" />
        <com.gc.materialdesign.views.Switch
            android:id="@+id/switch_female"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/niagara"
            materialdesign:check="true" />
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Age range"
        android:id="@+id/filter_age"
        android:layout_gravity="center_horizontal" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1"
            android:id="@+id/filter_age_min"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1"
            android:gravity="center_horizontal" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="35"
            android:id="@+id/filter_age_max"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1"
            android:gravity="center_horizontal" />

    </LinearLayout>

    <com.appyvet.rangebar.RangeBar
        android:id="@+id/filter_rangebar"
        android:layout_width="match_parent"
        android:layout_height="72dp"
        custom:tickStart="1"
        custom:tickInterval="1"
        custom:tickEnd="70"
        custom:barColor="@color/niagara"
        custom:connectingLineColor="@color/niagara"
        custom:selectorColor="@color/niagara"
        custom:pinColor="@color/niagara"
        custom:tickColor="@android:color/transparent"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"/>

</LinearLayout>