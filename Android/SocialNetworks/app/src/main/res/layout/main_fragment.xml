<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background">

    <ImageView
        android:layout_width="300dp"
        android:layout_height="120dp"
        android:id="@+id/avatar"
        android:layout_marginTop="50dp"
        android:layout_alignParentTop="true"
        android:background="#ffaf39ff"
        android:layout_centerHorizontal="true" />

    <com.rengwuxian.materialedittext.MaterialEditText
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:id="@+id/username_edit"
        android:inputType="textPersonName"
        android:ems="10"
        android:singleLine="true"
        app:floatingLabel="highlight"
        app:baseColor="#fff"
        app:primaryColor="#fff"
        app:floatingLabelText="   XXX"
        app:hideUnderline="true"
        android:layout_above="@+id/center"
        android:layout_centerHorizontal="true"
        android:hint="User name"
        android:layout_marginBottom="5dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/center"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <com.rengwuxian.materialedittext.MaterialEditText
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:singleLine="true"
        app:floatingLabel="highlight"
        app:baseColor="#fff"
        app:primaryColor="#fff"
        app:floatingLabelText="   XXX"
        app:hideUnderline="true"
        android:id="@+id/password_edit"
        android:layout_below="@+id/username_edit"
        android:layout_centerHorizontal="true"
        android:hint="Password" />

    <Button
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="Sign Up"
        android:id="@+id/sign_up"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/password_edit"
        android:textColor="@drawable/button_text_color"
        android:background="@drawable/background_normal"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Forgot Password?"
        android:id="@+id/password_recovery"
        android:layout_below="@+id/sign_up"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:textColor="#ffffffff" />

    <ImageButton
        android:layout_width="96.5dp"
        android:layout_height="wrap_content"
        android:id="@+id/facebook"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/background_normal"
        android:src="@drawable/facebook"
        android:textColor="#ffffffff"
        android:layout_toLeftOf="@+id/twitter"
        android:layout_marginRight="5dp"
        android:layout_alignBottom="@+id/twitter"
        android:scaleType="fitCenter"
        android:adjustViewBounds="true"
        android:padding="1dp" />

    <ImageButton
        android:layout_width="96.5dp"
        android:layout_height="wrap_content"
        android:id="@+id/twitter"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/background_normal"
        android:src="@drawable/twitter"
        android:textColor="#ffffffff"
        android:layout_marginTop="25dp"
        android:layout_below="@+id/password_recovery"
        android:layout_centerHorizontal="true"
        android:scaleType="fitCenter"
        android:adjustViewBounds="true"
        android:padding="1dp" />

    <ImageButton
        android:layout_width="96.5dp"
        android:layout_height="wrap_content"
        android:id="@+id/vk"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/background_normal"
        android:src="@drawable/vk"
        android:textColor="#ffffffff"
        android:layout_toRightOf="@+id/twitter"
        android:layout_marginLeft="5dp"
        android:layout_alignBottom="@+id/twitter"
        android:scaleType="fitCenter"
        android:adjustViewBounds="true"
        android:padding="1dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Privacy Policy"
        android:id="@+id/privacy_policy"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        android:textColor="#ffffffff" />
</RelativeLayout>