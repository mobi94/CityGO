<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:wheel="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/detailed_follower_name"
        android:layout_width="72dp"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:singleLine="true"
        android:gravity="center_horizontal"
        android:textColor="#FFF"
        android:layout_marginLeft="3dp" />

    <ImageView
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:id="@+id/detailed_followers_avatar"
        android:background="@drawable/background_oval_transparent"
        android:adjustViewBounds="true"
        android:layout_margin="3dp"
        android:layout_below="@+id/detailed_follower_name"
        android:contentDescription="follower avatar" />

    <com.pnikosis.materialishprogress.ProgressWheel
        android:id="@+id/progress_wheel_detailed_follower"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        wheel:matProg_barColor="#FFF"
        wheel:matProg_progressIndeterminate="true"
        android:layout_alignTop="@+id/detailed_followers_avatar"
        android:layout_alignBottom="@+id/detailed_followers_avatar"
        android:layout_alignRight="@+id/detailed_followers_avatar"
        android:layout_alignLeft="@+id/detailed_followers_avatar" />

</RelativeLayout>